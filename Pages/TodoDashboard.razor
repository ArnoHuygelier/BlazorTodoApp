@page "/todos"
@using System.Linq
@using BlazorTodoApp.Components
@using BlazorTodoApp.Models

<PageTitle>Todo Dashboard</PageTitle>

<div class="todo-dashboard-shell">
    <div class="todo-dashboard-card">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3 mb-4">
            <div>
                <p class="text-muted mb-1">Stay organized anywhere</p>
                <h1 class="h3 mb-0">Todo dashboard</h1>
            </div>
            <button class="btn btn-primary"
                    type="button"
                    data-test="add-todo-button"
                    @onclick="OpenCreateModal">
                Add todo
            </button>
        </div>
        <div class="todo-summary-badges" aria-live="polite">
            <div class="todo-summary-badge" data-test="summary-total">
                Total <span class="todo-summary-badge__value">@summary.Total</span>
            </div>
            <div class="todo-summary-badge todo-summary-badge--active" data-test="summary-active">
                Active <span class="todo-summary-badge__value">@summary.Active</span>
            </div>
            <div class="todo-summary-badge todo-summary-badge--completed" data-test="summary-completed">
                Completed <span class="todo-summary-badge__value">@summary.Completed</span>
            </div>
        </div>

        @if (!StateService.IsInitialized)
        {
            <p class="text-muted">Loading your todos...</p>
        }
        else
        {
            <TodoFilters SelectedFilter="StateService.CurrentFilter.Selection"
                         TotalCount="summary.Total"
                         ActiveCount="summary.Active"
                         CompletedCount="summary.Completed"
                         OnFilterSelected="HandleFilterChanged" />

            @if (!visibleTodos.Any())
            {
                <EmptyState OnCreateRequested="OpenCreateModal" />
            }
            else
            {
                <TodoList Items="visibleTodos"
                          OnEditRequested="HandleEditRequested"
                          OnToggleRequested="HandleToggleAsync"
                          OnDeleteRequested="HandleDeleteAsync" />
            }
        }
    </div>
</div>

<TodoEditModal Model="formModel"
               IsOpen="isModalOpen"
               Title="@ModalTitle"
               Mode="editMode"
               IsBusy="isFormBusy"
               ErrorMessage="formError"
               OnCancel="CloseModal"
               OnSubmit="HandleFormSubmitAsync" />
