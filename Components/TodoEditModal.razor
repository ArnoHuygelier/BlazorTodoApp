@using BlazorTodoApp.Pages
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@namespace BlazorTodoApp.Components

@if (IsOpen)
{
    <div class="todo-modal-overlay" data-test="todo-modal" @onclick="HandleCancelAsync">
        <div class="todo-modal-surface"
             role="dialog"
             aria-modal="true"
             aria-labelledby="todo-modal-title"
             @onclick:stopPropagation>
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <p class="text-muted mb-1">@(Mode == TodoEditMode.Edit ? "Update your todo" : "Capture a new todo")</p>
                    <h2 class="h4 mb-0" id="todo-modal-title">@Title</h2>
                </div>
                <button type="button" class="btn btn-link" title="Close" @onclick="HandleCancelAsync">
                    <span aria-hidden="true">&times;</span>
                    <span class="visually-hidden">Close</span>
                </button>
            </div>

            <EditForm Model="Model" OnValidSubmit="HandleValidSubmitAsync" class="d-flex flex-column gap-3">
                <DataAnnotationsValidator />
                <ValidationSummary />
                @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">@ErrorMessage</div>
                }

                <div>
                    <label for="todo-title" class="form-label">Title</label>
                    <InputText id="todo-title"
                               class="form-control"
                               @bind-Value="Model.Title"
                               aria-required="true" />
                </div>

                <div>
                    <label for="todo-note" class="form-label">Notes</label>
                    <InputTextArea id="todo-note"
                                   class="form-control"
                                   rows="3"
                                   @bind-Value="Model.Note" />
                    <div class="form-text">Optional context (500 characters max).</div>
                </div>

                <div>
                    <label for="todo-due-day" class="form-label">Due date</label>
                    <InputDate TValue="DateOnly?" id="todo-due-day" class="form-control" @bind-Value="Model.DueDay" />
                    <div class="form-text">Leave blank if this todo has no due date.</div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-outline-secondary"
                        type="button"
                        data-test="cancel-todo-button"
                            @onclick="HandleCancelAsync">
                        Cancel
                    </button>
                    <button class="btn btn-primary"
                            type="submit"
                            data-test="save-todo-button"
                            disabled="@(IsBusy)">
                        @if (IsBusy)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        <span>Save todo</span>
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public TodoFormModel Model { get; set; } = default!;

    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public string Title { get; set; } = "Add todo";

    [Parameter]
    public TodoEditMode Mode { get; set; } = TodoEditMode.Create;

    [Parameter]
    public bool IsBusy { get; set; }

    [Parameter]
    public string? ErrorMessage { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback<TodoFormModel> OnSubmit { get; set; }

    private Task HandleCancelAsync() => OnCancel.InvokeAsync();

    private async Task HandleValidSubmitAsync(EditContext _)
    {
        if (IsBusy)
        {
            return;
        }

        await OnSubmit.InvokeAsync(Model);
    }
}
